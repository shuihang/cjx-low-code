{
 "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["packages/*"],
      "cjx-low-code/es/components/*": ["dist/cjx-low-code/es/components/*"],
      "cjx-low-code/es/*": ["dist/cjx-low-code/es/*"]
    },
    "types": [
      "vite/client",
      // "element-plus/global.d.ts",
    ],
    "outDir": "target", // 请保留这个属性，防止tsconfig.json文件报错
    "typeRoots": ["./node_modules/@types/", "./types"]
  },
  "exclude": ["dist", "target", "node_modules"],
  "include": [
    "packages",
    "types/**/*.d.ts",
    "packages/types/auto-imports.d.ts",
  ],
  
}
